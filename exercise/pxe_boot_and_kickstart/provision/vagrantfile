# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.box = "centos/7"

  config.vm.provider "virtualbox" do |vb|
    vb.customize ["modifyvm", :id, "--memory", "1024"]
  end

  config.vm.provision "shell", 
    path: "scripts/initial-setup.sh"

  config.vm.define "dhcp" do |dhcp|
    dhcp.vm.hostname = "dhcp"
    dhcp.vm.network 'private_network', ip: "192.168.56.10"
  end

  config.vm.define "tftp" do |tftp|
    tftp.vm.hostname = "tftp"
    tftp.vm.network 'private_network', ip: "192.168.56.11"
  end

  config.vm.define "pxe" do |pxe|
    pxe.vm.hostname = "pxe"
    pxe.vm.network 'private_network', ip: "192.168.56.12"
  end
end